# Flask Server Configuration
HOST=0.0.0.0
PORT=8080

# Database Configuration
# For local development: ./leads.db
# For Render with persistent disk: /var/data/leads.db
# For Render free tier (ephemeral): /tmp/leads.db
DB_PATH=./leads.db

# Security - CRITICAL: Change this to a strong random token!
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
ADMIN_TOKEN=change-me-to-secure-random-token-min-32-chars

# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_from_botfather
ADMIN_CHAT_ID=your_telegram_chat_id

# Web App URLs (for bot)
WEB_APP_URL=https://your-app.onrender.com
BACKEND_URL=https://your-app.onrender.com

# Optional: Railway deployment
APP_ROLE=web

# Optional: Enable debug mode (DO NOT use in production!)
# FLASK_DEBUG=False

# Optional: Database backup configuration
# DB_BACKUP_ENABLED=true
# DB_BACKUP_INTERVAL_HOURS=24
